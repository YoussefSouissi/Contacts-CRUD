<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactApiDemo.UpdateContactPage"
             Title="UpdateContactPage">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Update Contact" FontSize="Large" HorizontalOptions="CenterAndExpand" Margin="0,20,0,10"/>

            <Entry x:Name="fullNameEntry" Placeholder="Full Name" />
            <Entry x:Name="emailEntry" Placeholder="Email" />
            <Entry x:Name="phoneEntry" Placeholder="Phone" />
            <Entry x:Name="addressEntry" Placeholder="Address" />

            <Button Text="Update" TextColor="White" BackgroundColor="Blue" Clicked="OnUpdateClicked" HorizontalOptions="CenterAndExpand" Margin="0,20,0,0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>